{
    "name": "bank-server",
    "version": "1.2.0",
    "description": "Backend Application",
    "author": "Adrian Pietrzak <contact@pietrzakadrian.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "start:hmr": "node dist/main",
        "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
        "migration:generate": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:revert": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "watch:dev": "nodemon --config nodemon.json",
        "debug:dev": "nodemon --config nodemon-debug.json",
        "webpack": "webpack --config webpack.config.js --progress",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "schema:drop": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "start:prod": "node -r ./tsconfig.paths.js dist/main.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint --fix . --ext .ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.9",
        "@nestjs/core": "^7.0.9",
        "@nestjs/jwt": "^7.0.0",
        "@nestjs/microservices": "^7.0.9",
        "@nestjs/passport": "^7.0.0",
        "@nestjs/platform-express": "^7.0.9",
        "@nestjs/swagger": "^4.5.3",
        "@nestjs/typeorm": "^7.0.0",
        "@nestjs/schedule": "0.3.1",
        "aws-sdk": "~2.665.0",
        "bcrypt": "~4.0.1",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.12.2",
        "compression": "~1.7.4",
        "dotenv": "~8.2.0",
        "express": "~4.17.1",
        "express-rate-limit": "~5.1.3",
        "file-type": "~14.2.0",
        "helmet": "~3.22.0",
        "jsonwebtoken": "~8.5.1",
        "lodash": "^4.17.15",
        "mime-types": "~2.1.27",
        "morgan": "~1.10.0",
        "passport": "~0.4.1",
        "passport-jwt": "^4.0.0",
        "pg": "^8.0.3",
        "request-context": "~2.0.0",
        "rxjs": "^6.5.5",
        "source-map-support": "^0.5.19",
        "swagger-ui-express": "^4.1.4",
        "typeorm": "^0.2.24",
        "typeorm-transactional-cls-hooked": "^0.1.12",
        "typescript": "^3.8.3",
        "uuid": "^7.0.3"
    },
    "devDependencies": {
        "@nestjs/testing": "^7.0.9",
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.7.0",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.6",
        "@types/express-rate-limit": "^5.0.0",
        "@types/file-type": "^10.9.1",
        "@types/helmet": "^0.0.46",
        "@types/jest": "^25.2.1",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/lodash": "^4.14.150",
        "@types/mime-types": "^2.1.0",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.13.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^7.0.3",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/eslint-plugin-tslint": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-import-helpers": "^1.0.2",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "husky": "^4.2.5",
        "jest": "^25.5.1",
        "lint-staged": "~10.2.0",
        "npm-check-updates": "^4.1.2",
        "nodemon": "^2.0.3",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2",
        "ts-jest": "^25.4.0",
        "ts-loader": "^7.0.1",
        "ts-node": "^8.9.1",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "~1.18.0",
        "tslint-consistent-codestyle": "^1.16.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-plugin-prettier": "^2.3.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-node-externals": "^1.7.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "git add"
        ]
    }
}
